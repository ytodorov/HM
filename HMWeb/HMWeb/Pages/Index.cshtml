@page
@model IndexModel
<img src="~/images/Birthday_Card.png" />
<div class="text-center">
    <audio id="myAudio" controls="controls" style="display:none">
        <source src="~/02-madonna-get_together.mp3" type="audio/mpeg" />
    </audio>
    <button class="k-button" onclick="playMe()">play music</button>
    <button class="k-button" onclick="stopMe()">pause music</button>
    <button class="k-button" onclick="restartMe()">restart music</button>
    <br />
    <br />
    <br />
    <br />
</div>
<script>
    globalFirstClick = 0;
    function playMe() {
        //debugger;
        var vid = document.getElementById("myAudio");
        if (globalFirstClick == 0) {
            vid.currentTime = 54;
        }
        globalFirstClick++;
        vid.play();
    }
    function stopMe() {
        var vid = document.getElementById("myAudio");
        vid.pause();
    }

    function restartMe() {
        var vid = document.getElementById("myAudio");
        vid.currentTime = 54;
        vid.play();
    }
</script>